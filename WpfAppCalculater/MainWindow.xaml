<Window x:Class="WpfAppCalculater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор"
        Height="650"
        Width="480"
        Background="#F3F4F6"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="65"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="13">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Для операторов -->
        <Style TargetType="Button" x:Key="OperatorButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF75B1F7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6CA9F9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2563EA"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Для кнопки = -->
        <Style TargetType="Button" x:Key="EqualsButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF14CE8A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#10B981"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <TabControl>
        <!-- Вкладка калькулятора -->
        <TabItem Header="Калькулятор">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Дисплей -->
                <TextBox x:Name="Display"
                         Grid.Row="0"
                         FontSize="32"
                         FontFamily="Consolas"
                         HorizontalContentAlignment="Right"
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Text="0"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#E5E7EB"
                         BorderThickness="2"
                         Padding="12"
                         Height="80"
                         Margin="0,0,0,10"/>

                <!-- Кнопки -->
                <UniformGrid Grid.Row="2" Columns="4" Rows="5">
                    <!-- Первая строка -->
                    <Button Content="7" Click="OnDigitClick"/>
                    <Button Content="8" Click="OnDigitClick"/>
                    <Button Content="9" Click="OnDigitClick"/>
                    <Button Content="/" Style="{StaticResource OperatorButton}" Click="OnOperatorClick"/>

                    <!-- Вторая строка -->
                    <Button Content="4" Click="OnDigitClick"/>
                    <Button Content="5" Click="OnDigitClick"/>
                    <Button Content="6" Click="OnDigitClick"/>
                    <Button Content="*" Style="{StaticResource OperatorButton}" Click="OnOperatorClick"/>

                    <!-- Третья строка -->
                    <Button Content="1" Click="OnDigitClick"/>
                    <Button Content="2" Click="OnDigitClick"/>
                    <Button Content="3" Click="OnDigitClick"/>
                    <Button Content="-" Style="{StaticResource OperatorButton}" Click="OnOperatorClick"/>

                    <!-- Четвертая строка -->
                    <Button Content="0" Click="OnDigitClick"/>
                    <Button Content="," Click="OnDecimalClick"/>
                    <Button Content="C" Foreground="Red" Click="OnClearClick"/>
                    <Button Content="+" Style="{StaticResource OperatorButton}" Click="OnOperatorClick"/>

                    <!-- Пятая строка -->
                    <Button Content="=" Style="{StaticResource EqualsButton}" Grid.ColumnSpan="4" Click="OnEqualsClick"/>
                </UniformGrid>
            </Grid>
        </TabItem>

        <!-- Вкладка истории -->
        <TabItem Header="История">
            <Grid Margin="12">
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="10">
                    <ListBox x:Name="HistoryList" FontSize="18" FontFamily="Segoe UI"/>
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
